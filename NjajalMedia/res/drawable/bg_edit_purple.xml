<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- "background shadow" -->
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#22000000" />

            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- background color -->
    <item
        android:bottom="1px"
        android:left="1px"
        android:right="1px"
        android:top="1px">
        <shape android:shape="rectangle" >
            <solid android:color="@color/light_purple" />

            <corners android:radius="8dp" />
        </shape>
    </item>
         
    <!-- over bottom shadow -->
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="-90"
                android:centerColor="#00c9aff5"
                android:centerY="0.2"
                android:endColor="#00c9aff5"
                android:startColor="#99522e90"
                android:type="linear" />

            <corners android:radius="8dp" />
        </shape>
    </item>

</layer-list>