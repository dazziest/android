<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppBaseThemeNoActionBar" parent="AppBaseTheme">

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:actionBarStyle">@style/ActionBarWhite</item>
    </style>

    <style name="ActionBarWhite" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:homeAsUpIndicator">@drawable/ic_drawer</item>
        <item name="android:actionBarStyle">@style/ActionBarWhite</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="edittext_style">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="edittext_style_enable" parent="edittext_style">
        <item name="android:background">@drawable/bg_edit_enable</item>
    </style>

    <style name="edittext_style_disable" parent="edittext_style">
        <item name="android:background">@drawable/bg_edit_disable</item>
    </style>

    <style name="edittext_style_mandatory" parent="edittext_style">
        <item name="android:background">@drawable/bg_edit_purple</item>
    </style>

    <style name="textview_label_style">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:singleLine">false</item>
        <item name="android:ellipsize">none</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>